<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/assets/style.css" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <title>Dashboard</title>
</head>
<body>
  <section class="vh-8500 gradient-custom">   
    <div class="topdiv"> 
      <nav class="navbar navbar-dark bg-dark navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header me-auto">
            <a class="navbar-brand" href="/">My Tasks</a>
          </div>
          <a class="custom-btn btn btn-primary home-btn" href="/users/dashboard"> Home</a>
          <a class="custom-btn btn btn-light addTodo-btn" href="/users/addTodo"> Add ToDo</a>
          <a class="custom-btn btn btn-warning" href="/users/logout"> Logout</a>
        </div>
      </nav>
    </div>

    <div>
      <% if(messages.success_msg) { %>
        <div class="alert alert-success">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <%= messages.success_msg %>
        </div>
      <% } %>
    </div>

    <div class="bottomdiv">
      <div class="container">
        <h1 class="your-todo mb-5 text-center fw-bold">Your Todos</h1>
          <table class="table table-hover table-dark">
            <thead>
              <th scope="col">My Todo</th>
              <th scope="col">Actions</th>
          </thead>
            <tbody>
              <% for(let i = 0; i < list.rows.length; i++) { %>
                <tr>
                  <th scope="row"><%= list.rows[i].title %></th>
                  <td>
                    <a class="btn btn-primary view-btn" href="/users/view/<%= list.rows[i].id %>">View</a>
                    <a class="btn btn-warning edit-btn" href="/users/edit/<%= list.rows[i].id %>">Edit</a>
                    <a class="btn btn-success edit-btn" href="/users/addTodoItem/<%= list.rows[i].id %>">Add Item</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
      </div>
    </div>
  </section>
  </body>
</html>

